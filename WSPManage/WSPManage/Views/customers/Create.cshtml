@model WSPManage.Models.customer

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create New Customer</h2>

<div>
    @Html.ActionLink("Back to Customers", "Index")
</div>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
